<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:orientation="vertical">
	<TextView android:text="@string/userExperianceLevelExplain"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	<RadioGroup android:layout_height="match_parent"
		android:layout_width="match_parent" android:id="@+id/rgUserlevel">
		<RadioButton android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/rbBeginner"
			android:text="Beginner"></RadioButton>
		<TextView android:id="@+id/textView2" android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Easy to configure and all setting should be save to use,,, Underclocking only possible to a point."
			android:layout_marginLeft="@dimen/paddingUserLevelChooser"></TextView>
		<RadioButton android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Normal"
			android:id="@+id/rbNormal"></RadioButton>
		<TextView android:layout_width="wrap_content" android:id="@+id/textView3"
			android:layout_height="wrap_content"
			android:text="More advanced configuration options, still underclocking only possible to a point."
			android:layout_marginLeft="@dimen/paddingUserLevelChooser"></TextView>
		<RadioButton android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Power User"
			android:id="@+id/rbPowerUser"></RadioButton>
		<TextView android:layout_width="wrap_content" android:id="@+id/textView4"
			android:layout_height="wrap_content" android:text="Full controll"
			android:layout_marginLeft="@dimen/paddingUserLevelChooser"></TextView>
	</RadioGroup>
	<LinearLayout android:id="@+id/linearLayout1"
		android:layout_height="wrap_content" android:layout_width="match_parent"
		android:baselineAligned="false" android:layout_marginTop="10dp">
		<Button android:layout_gravity="fill_horizontal"
			android:layout_width="wrap_content" android:layout_weight="1"
			android:id="@+id/buOk" android:text="OK" android:layout_height="wrap_content"></Button>
		<Button android:id="@+id/buCancel" android:text="Cancel"
			android:layout_width="wrap_content" android:layout_gravity="fill_horizontal"
			android:layout_weight="1" 
			android:layout_height="wrap_content"></Button>
	</LinearLayout>
</LinearLayout>
