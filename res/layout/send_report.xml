<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical" android:padding="7dp"
	android:isScrollContainer="true">
	<EditText android:layout_height="wrap_content" android:id="@+id/etSubject"
		android:lines="1" android:hint="Subject" android:layout_width="fill_parent"
		android:layout_weight="0.1"></EditText>
	<TextView android:id="@+id/TextView01" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/labelBody"></TextView>

	<EditText android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:id="@+id/etMailBody" android:layout_weight="0.9"
		android:gravity="top" android:hint="@string/hintMailBody_en"></EditText>
	<Button android:layout_height="wrap_content" android:text="@string/labelSendMail"
		android:layout_width="fill_parent" android:layout_weight="0.1"
		android:id="@+id/buSendMail"></Button>
</LinearLayout>
